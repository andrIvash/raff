script(type="text/x-template" id="game-template")
  main.main.main_game(v-show="isShown")     
    .main__content
      
    .gamedock
        .gamedock__list
          .gamedock__item.gamedock__info(v-on:click="onPanelShow")
            .gamedock__triangle

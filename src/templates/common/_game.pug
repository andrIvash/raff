            li.gamepanel__item.gamepanel_health
              .gamepanel__item-title Поход к врачу          
              .gamepanel__item-summ -1500
            li.gamepanel__item.gamepanel_smile
              .gamepanel__item-title Новые кроссовки         
              .gamepanel__item-summ -1000        
